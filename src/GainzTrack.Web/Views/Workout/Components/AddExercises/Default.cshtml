@using GainzTrack.Web.Utilities
@model List<Exercise>
@{
    Layout = null;
}



@{var counter = 1; }

@foreach (var item in Model)
{
    
    <div class="exercise-item">
        <div class="tab">
            <input id="tab-@ViewData["DivId"]-@counter" type="checkbox" name="tabs">
            <label for="tab-@ViewData["DivId"]-@counter">@item.ExerciseName</label>

            <span id="exercise-@ViewData["DivId"]" class="add-exercise-button">Add</span>
            <div class="tab-content">
                <iframe src="@item.VideoUrl.DecodeUrl()" frameborder="0"></iframe>
            </div>
        </div>
        <hr />
    </div>

    counter++;
}
